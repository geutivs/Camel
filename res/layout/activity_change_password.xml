<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/login_div"
        android:layout_below="@id/include1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dip"
        android:background="@drawable/background_login_div_bg"
        android:padding="15dip" >

        <TextView
            android:id="@+id/changepass_user_password_text"
            style="@style/signUpText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:text="请输入新密码" />

        <EditText
            android:id="@+id/changepass_user_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/changepass_user_password_text"
            android:inputType="textPassword"
            android:singleLine="true" />
        
         <TextView
            android:id="@+id/changepass_user_password2_text"
            style="@style/signUpText"
            android:layout_below="@id/changepass_user_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="请再次石输入新密码" />

        <EditText
            android:id="@+id/changepass_user_password2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/changepass_user_password2_text"
            android:inputType="textPassword"
            android:singleLine="true" />

        <Button
            android:id="@+id/changepass_action_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/changepass_user_password2"
			android:layout_marginTop="6dp"
            android:background="@drawable/blue_button"
            android:text="修改密码" />
    </RelativeLayout>

    <include
        android:id="@+id/include1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        layout="@layout/component_head_title" />

</RelativeLayout>