<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    
    <ImageView 
        android:id="@+id/signin_result_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:src="@drawable/ic_succ"/>
    
    <TextView 
        android:id="@+id/signin_result_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/signin_result_icon"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        android:text=""/>
    
     <TextView 
        android:id="@+id/signin_result_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/signin_result_title"
        android:textSize="14sp"
        android:text=""/>

</RelativeLayout>